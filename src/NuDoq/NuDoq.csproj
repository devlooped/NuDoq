<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>NuDoq</PackageId>
    <Description>A lightweight API to read and write .NET XML documentation files, optionally augmented with reflection information.</Description>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NuGetizer" Version="0.9.1" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="all" Visible="false" />
    <PackageReference Include="ThisAssembly.AssemblyInfo" Version="1.2.5" Pack="false" />
    <PackageReference Include="ThisAssembly.Project" Version="1.2.5" Pack="false" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NuDoq.CodeAnalysis\NuDoq.CodeAnalysis.csproj" ReferenceOutputAssembly="false" />
  </ItemGroup>

</Project>
